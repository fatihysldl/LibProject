@model EntityLayer.concrete.book
@{
    ViewData["Title"] = "addBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Book</h1>

@using (Html.BeginForm("addBook", "book", FormMethod.Post))
{
    <labal>Book Name</labal>
    @Html.TextBoxFor(i => i.bookName, new { @class = "form-control" })
    <br />
    <labal>Book Stock</labal>
    @Html.TextBoxFor(i => i.bookStock, new { @class = "form-control" })
    <br />
    <labal>Book Category</labal>
    @Html.DropDownListFor(i => i.categoryId, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(i=>i.bookId)
    <button class="btn btn-primary">Add</button>
}